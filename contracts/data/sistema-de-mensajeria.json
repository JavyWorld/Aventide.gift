{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aventide.gift/contracts/data/sistema-de-mensajeria.entity.v1.json",
  "title": "Sistema De MensajeriaEntity",
  "description": "Entidad clave transversal del dominio sistema-de-mensajeria",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "domain",
    "version",
    "createdAt",
    "updatedAt",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "domain": {
      "type": "string",
      "const": "sistema-de-mensajeria"
    },
    "version": {
      "type": "string",
      "pattern": "^v(\\d+)(\\.\\d+)?$"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "inactive",
        "deleted"
      ]
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "attributes": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
